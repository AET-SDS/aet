<suite name="demo" company="aet" domain="http://192.168.123.100:9090" project="aet">

    <test name="Demo_Test">
        <collect>
            <open/>
            <wait-for-page-loaded/>
            <hide xpath="//p[@id='demo1']" />
            <hide xpath="//p[@id='demo2']" />
            <resolution width="480" height="720"/>
            <screen name="480 px"/>
            <accessibility standard="WCAG2A"/>
            <js-errors/>
        </collect>
        <compare>
            <screen comparator="layout"/>
            <accessibility>
                <accessibility-filter
                    principle="WCAG2A.Principle4.Guideline4_1.4_1_2.H91.Button.Name"/>
                <accessibility-filter
                    principle="WCAG2A.Principle4.Guideline4_1.4_1_2.H91.Select.Name"/>
                <accessibility-filter
                    principle="WCAG2A.Principle1.Guideline1_3.1_3_1.F68"/>
                <accessibility-filter
                    principle="WCAG2A.Principle3.Guideline3_2.3_2_2.H32.2"/>
                <accessibility-filter
                    principle="WCAG2A.Principle4.Guideline4_1.4_1_2.H91.InputText.Name"/>
            </accessibility>
            <js-errors>
                <js-errors-filter
                    source="/sample-site/sanity/comparators/jserrors/failed.jsp"
                    line="22"
                    error="ReferenceError: nonExistingJsFunction is not defined"/>
                <js-errors-filter
                    source="/sample-site/sanity/comparators/jserrors/failed.jsp"
                    line="390"
                    error="ReferenceError: nonExistingVariable is not defined"/>
            </js-errors>
        </compare>
        <urls>
            <url href="/sample-site/sanity/comparators/jserrors/success.jsp"/>
            <url href="/sample-site/sanity/comparators/jserrors/failed.jsp"/>
            <url href="/sample-site/sanity/comparators/layout/failed.jsp" />
            <url href="/sample-site/sanity/comparators/w3c-html5/success.jsp"/>
        </urls>
    </test>

</suite>
